<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    tools:context=".CalcActivity">
    <TableRow>
    <Button style="@style/MyCalc" android:text="1"/>
    <Button style="@style/MyCalc" android:text="2"/>
    <Button style="@style/MyCalc" android:text="3"/>
    <Button style="@style/MyCalc" android:text="+"/>
</TableRow>
    <TableRow>
        <Button style="@style/MyCalc" android:text="4"/>
        <Button style="@style/MyCalc" android:text="5"/>
        <Button style="@style/MyCalc" android:text="6"/>
        <Button style="@style/MyCalc" android:text="-"/>
    </TableRow>
    <TableRow>
        <Button style="@style/MyCalc" android:text="7"/>
        <Button style="@style/MyCalc" android:text="8"/>
        <Button style="@style/MyCalc" android:text="9"/>
        <Button style="@style/MyCalc" android:text="*"/>
    </TableRow>
    <TableRow>
        <Button style="@style/MyCalc" android:text="0"/>
        <Button style="@style/MyCalc" android:layout_span="2"
            android:text="CLEAR"/>

        <Button style="@style/MyCalc" android:text="/"/>
    </TableRow>
</TableLayout>