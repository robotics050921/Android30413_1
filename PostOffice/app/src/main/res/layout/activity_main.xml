<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:stretchColumns="*"
    tools:context=".MainActivity">

    <TableRow>
        <ImageView android:src="@drawable/logo"
            android:layout_span="3"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </TableRow>

    <TableRow>
        <Button android:text="로그인" android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_span="3"
            android:backgroundTint="#FF0000"
            android:layout_gravity="right"/>
    </TableRow>
    <TableRow android:layout_marginVertical="10dp">
        <EditText android:hint="동기(송장)번호를 입력하세요"
            android:layout_height="50dp"
            android:inputType="numberPassword"
            android:layout_span="3"
            android:maxLength="13"
            android:layout_width="match_parent"
            android:background="@drawable/line_custom"/>
    </TableRow>
    <TableRow>
        <ImageView
            android:layout_span="3"
            android:src="@drawable/ad"/>
    </TableRow>

    <TableRow android:layout_marginVertical="10dp">
        <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="방문소포접수"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/a"
            android:textColor="@color/black"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="방문소포접수"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/b"
            android:textColor="@color/black"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="방문소포접수"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/c"
            android:textColor="@color/black"/>

    </TableRow>

    <TableRow android:layout_marginVertical="10dp">
        <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="방문소포접수"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/d"
            android:textColor="@color/black"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="방문소포접수"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/e"
            android:textColor="@color/black"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="방문소포접수"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/f"
            android:textColor="@color/black"/>
    </TableRow>
    <TableRow>
        <Button android:layout_span="3"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="공지:국제특급우편 EMS할인 이벤트"
            android:gravity="left"/>
    </TableRow>

</TableLayout>